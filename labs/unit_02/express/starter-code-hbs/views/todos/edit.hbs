<h1>Edit {{todo.description}}</h1>

<form method="POST" action="/todos/{{id}}?_method=PUT">
    <div>
        <label for="description">Description:</label>
        <input name="description" value="{{todo.description}}"></input>
    </div>
  <div>
    <label for="urgent">Urgent: </label>
    {{#if todo.urgent}}
      <span>Yes</span><input type="radio" name="urgent" value="true" checked />
      <span>No</span><input type="radio" name="urgent" value="false" />
    {{else}}
      <span>Yes</span><input type="radio" name="urgent" value="true" />
      <span>No</span><input type="radio" name="urgent" value="false" checked/>
    {{/if}}
  </div>

    <button>UPDATE TODO</button>
</form>